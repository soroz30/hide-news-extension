{
  "manifest_version": 3,
  "name": "GoodNewsOnly",
  "version": "1.0",
  "action": {
    "default_title": "GoodNewsOnly",
    "default_popup": "index.html",
    "default_icon": "32x32.png"
  },
  "icons": {
    "16": "16x16.png",
    "32": "32x32.png",
    "48": "48x48.png",
    "128": "128x128.png"
  },
  "permissions": ["storage"],
  "content_scripts": [
    {
      "matches": ["https://*/*"],
      "js": ["content-script/main.ts"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "background": {
    "service_worker": "src/background.ts"
  }
}
